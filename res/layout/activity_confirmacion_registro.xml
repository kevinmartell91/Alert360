<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.moviles.alert360.ConfirmacionRegistroActivity"
    android:background="@color/upece_color" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="@dimen/ancho_de_labels"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/label_confirmacion_registro"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="@color/upece_color_texto_blanco"/>

    <Button
        android:id="@+id/btnRegresarInicio"
        android:layout_width="@dimen/ancho_de_views"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="RegresarAInicio"
        android:text="@string/button_regresar_inicio" 
        style="@style/DisenoBotones"/>

</RelativeLayout>
