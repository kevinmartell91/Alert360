<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/upece_color">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/alertmini" 
        android:paddingBottom="@dimen/margen_sup_inf_views"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_guia_rapida_cero"
        android:textSize="24sp" 
        android:textColor="@color/upece_color_texto_blanco"
        android:padding="10sp"/>

</LinearLayout>
